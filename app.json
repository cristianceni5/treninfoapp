{
  "expo": {
    "name": "Treninfo",
    "scheme": "treninfo",
    "slug": "treninfo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icone/prova-iOS-Default-1024x1024@1x.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icone/prova-iOS-Default-1024x1024@1x.png",
      "resizeMode": "contain",
      "backgroundColor": "#1C1C1E"
    },
    "ios": {
      "icon": {
        "light": "./assets/icone/prova-iOS-Default-1024x1024@1x.png",
        "dark": "./assets/icone/prova-iOS-Dark-1024x1024@1x.png",
        "tinted": "./assets/icone/prova-iOS-TintedLight-1024x1024@1x.png"
      },
      "bundleIdentifier": "com.cristianceni.treninfo",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Treninfo usa la tua posizione per mostrarti le stazioni ferroviarie nelle vicinanze."
      }
    },
    "android": {
      "package": "com.cristianceni.treninfo",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icone/prova-iOS-Default-1024x1024@1x.png",
        "backgroundColor": "#1C1C1E"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/icone/prova-iOS-Default-1024x1024@1x.png"
    },
    "plugins": [
      "@react-native-community/datetimepicker",
      "expo-router"
    ]
  }
}
